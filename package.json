    "test": "cypress run",
    "test:e2e": "cypress run --spec 'cypress/e2e/**/*.cy.js'",
    "test:component": "cypress run --component --spec 'cypress/component/**/*.cy.{js,jsx,ts,tsx}'",
    "test:component:coverage": "cypress run --component --spec 'cypress/component/**/*.cy.{js,jsx,ts,tsx}' --env codeCoverage=true",
    "test:component:watch": "cypress open --component",
    "test:all": "npm run test:component && npm run test:e2e",
    "coverage:component": "nyc report --reporter=html --reporter=text --report-dir=coverage/component",
    "act:list": "act -l",
    "act:build": "act -W .github/workflows/build.yml",
    "act:e2e": "act -W .github/workflows/e2e-tests.yml",
    "act:component": "act -W .github/workflows/component-tests.yml"
