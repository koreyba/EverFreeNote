  "scripts": {
    "dev": "next dev",
    "dev:full": "NODE_OPTIONS=\"--max-old-space-size=512\" next dev --hostname 0.0.0.0 --port 3000",
    "dev:no-reload": "next dev",
    "dev:webpack": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "eslint": "eslint . --max-warnings=0",
    "db:start": "supabase start",
